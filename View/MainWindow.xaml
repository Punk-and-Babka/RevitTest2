<Window x:Class="RevitTest2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Построение стен по помещениям" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Grid.Row="0" Content="Выберите помещения для построения стен:" FontWeight="Bold"/>

        <!-- Список всех помещений с CheckBox -->
        <ListView Grid.Row="1" ItemsSource="{Binding AllRooms}" Margin="0,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30">
                        <GridViewColumn.Header>
                            <CheckBox IsChecked="{Binding SelectAll}"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding Room.Number}" Width="80"/>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Room.Name}" Width="150"/>
                    <GridViewColumn Header="Уровень" DisplayMemberBinding="{Binding Room.Level.Name}" Width="100"/>
                    <GridViewColumn Header="Площадь" DisplayMemberBinding="{Binding Room.Area, StringFormat={}{0:F2} м²}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Выбрать все" Command="{Binding SelectAllCommand}" Margin="0,0,10,0" Width="100"/>
            <Button Content="Снять выделение" Command="{Binding DeselectAllCommand}" Width="120"/>
        </StackPanel>

        <!-- Кнопка построения стен -->
        <Button Grid.Row="3" Content="Построить стены для выбранных помещений" 
                Command="{Binding CreateWallsCommand}"
                Height="40" Margin="0,10,0,0" FontWeight="Bold"/>
    </Grid>
</Window>