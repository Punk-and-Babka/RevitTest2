<Window x:Class="RevitTest2.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Построение стен по помещениям" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка выбора помещений -->
        <Button Grid.Row="0" Content="Выбрать помещения" 
                Command="{Binding SelectRoomsCommand}"
                Height="30" Margin="0,0,0,10"/>

        <!-- Список выбранных помещений -->
        <Label Grid.Row="1" Content="Выбранные помещения:"/>
        <ListView Grid.Row="1" ItemsSource="{Binding SelectedRooms}" Margin="0,25,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding Name}" Width="120"/>
                    <GridViewColumn Header="Номер" DisplayMemberBinding="{Binding Number}" Width="80"/>
                    <GridViewColumn Header="Уровень" DisplayMemberBinding="{Binding Level.Name}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопка построения стен -->
        <Button Grid.Row="2" Content="Построить стены" 
                Command="{Binding CreateWallsCommand}"
                Height="30" Margin="0,10,0,0"/>
    </Grid>
</Window>